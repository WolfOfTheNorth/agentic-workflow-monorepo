{
  "name": "agentic-workflow-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*",
    "infra/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\" --names \"frontend,backend\" --prefix-colors \"cyan,magenta\"",
    "dev:frontend": "pnpm --filter @agentic-workflow/frontend dev",
    "dev:backend": "pnpm --filter @agentic-workflow/backend dev",
    "dev:all": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\" --names \"frontend,backend\" --prefix-colors \"cyan,magenta\"",
    "dev:frontend-only": "pnpm --filter @agentic-workflow/frontend dev",
    "dev:backend-only": "pnpm --filter @agentic-workflow/backend dev",
    "build": "pnpm -r --filter @agentic-workflow/shared --filter @agentic-workflow/ui --filter @agentic-workflow/api build && pnpm -r --filter @agentic-workflow/frontend --filter @agentic-workflow/backend build",
    "build:frontend": "pnpm --filter @agentic-workflow/frontend build",
    "build:backend": "pnpm --filter @agentic-workflow/backend build",
    "build:packages": "pnpm --filter @agentic-workflow/shared --filter @agentic-workflow/ui --filter @agentic-workflow/api build",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test",
    "test:integration": "jest --config configs/testing/jest.node.js tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
    "test:frontend": "pnpm --filter @agentic-workflow/frontend test",
    "test:backend": "pnpm --filter @agentic-workflow/backend test",
    "test:packages": "pnpm --filter @agentic-workflow/shared --filter @agentic-workflow/ui --filter @agentic-workflow/api test",
    "test:watch": "pnpm -r --parallel test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "test:ci": "pnpm test:unit && pnpm test:integration && pnpm test:e2e --reporter=junit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:workspaces": "pnpm -r lint",
    "lint:frontend": "pnpm --filter @agentic-workflow/frontend lint",
    "lint:backend": "pnpm --filter @agentic-workflow/backend lint",
    "lint:packages": "pnpm --filter @agentic-workflow/shared --filter @agentic-workflow/ui --filter @agentic-workflow/api lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:workspaces": "pnpm -r format",
    "type-check": "pnpm -r type-check",
    "type-check:frontend": "pnpm --filter @agentic-workflow/frontend type-check",
    "type-check:packages": "pnpm --filter @agentic-workflow/shared --filter @agentic-workflow/ui --filter @agentic-workflow/api type-check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "clean:frontend": "pnpm --filter @agentic-workflow/frontend clean",
    "clean:backend": "pnpm --filter @agentic-workflow/backend clean",
    "clean:packages": "pnpm --filter @agentic-workflow/shared --filter @agentic-workflow/ui --filter @agentic-workflow/api clean",
    "install:all": "pnpm install",
    "prepare": "husky",
    "start": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\" --names \"frontend,backend\" --prefix-colors \"cyan,magenta\"",
    "preview": "pnpm --filter @agentic-workflow/frontend preview",
    "check": "concurrently \"pnpm lint\" \"pnpm type-check\" \"pnpm format:check\" --names \"lint,types,format\" --prefix-colors \"yellow,blue,green\"",
    "check:fix": "pnpm lint:fix && pnpm format",
    "validate": "./scripts/validate-code-quality.sh",
    "quality": "./scripts/validate-code-quality.sh",
    "migrate": "pnpm --filter @agentic-workflow/backend migrate",
    "makemigrations": "pnpm --filter @agentic-workflow/backend makemigrations",
    "tools:build-order": "cd tools && node build/build-order.js",
    "tools:build-all": "cd tools && node build/build-all.js",
    "tools:workspace-info": "cd tools && node dev/workspace-info.js",
    "tools:dev-server": "cd tools && node dev/dev-server.js",
    "tools:package-check": "cd tools && node dev/package-checker.js",
    "tools:validate-linking": "cd tools && node dev/package-linking-validator.js",
    "tools:security-audit": "cd tools && node dev/security-audit.js",
    "tools:validate-deps": "cd tools && node dev/dependency-validator.js",
    "security:audit": "cd tools && node dev/security-audit.js --verbose",
    "security:audit-ci": "cd tools && node dev/security-audit.js --ci --severity moderate",
    "security:audit-fix": "cd tools && node dev/security-audit.js --fix --verbose",
    "deps:validate": "cd tools && node dev/dependency-validator.js --verbose",
    "deps:validate-fix": "cd tools && node dev/dependency-validator.js --fix --dry-run",
    "deps:outdated": "cd tools && node dev/dependency-validator.js --check-outdated",
    "perf:bundle-analyze": "node tools/performance/bundle-analyzer.js",
    "perf:build-monitor": "node tools/performance/build-monitor.js",
    "perf:dev-optimize": "node tools/performance/dev-server-optimizer.js optimize",
    "perf:dev-monitor": "node tools/performance/dev-server-optimizer.js monitor",
    "perf:dev-start": "node tools/performance/dev-server-optimizer.js start",
    "perf:all": "pnpm perf:bundle-analyze && pnpm perf:build-monitor && pnpm perf:dev-optimize"
  },
  "lint-staged": {
    "{apps,packages}/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@pimzino/claude-code-spec-workflow": "^1.2.5",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-legacy": "^7.1.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "husky": "^9.1.7",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.2",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "puppeteer": "^24.15.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "supertest": "^7.1.4",
    "typescript": "^5.0.0",
    "vite-plugin-pwa": "^1.0.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "workbox-webpack-plugin": "^7.3.0"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "glob": "^11.0.3",
    "minimist": "^1.2.8"
  }
}
