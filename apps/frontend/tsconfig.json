{
  "extends": "../../configs/typescript/react.json",
  "compilerOptions": {
    "baseUrl": "../..",
    "paths": {
      "@agentic-workflow/shared": ["./packages/shared/src"],
      "@agentic-workflow/shared/*": ["./packages/shared/src/*"],
      "@agentic-workflow/ui": ["./packages/ui/src"],
      "@agentic-workflow/ui/*": ["./packages/ui/src/*"],
      "@agentic-workflow/api": ["./packages/api/src"],
      "@agentic-workflow/api/*": ["./packages/api/src/*"]
    }
  },
  "include": ["src/**/*", "**/*.ts", "**/*.tsx"],
  "references": [
    { "path": "../../packages/shared" },
    { "path": "../../packages/ui" },
    { "path": "../../packages/api" }
  ]
}
