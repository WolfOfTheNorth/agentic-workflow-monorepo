{
  "extends": "../../configs/typescript/node.json",
  "compilerOptions": {
    "baseUrl": "../..",
    "allowJs": true,
    "checkJs": false,
    "paths": {
      "@agentic-workflow/shared": ["./packages/shared/src"],
      "@agentic-workflow/shared/*": ["./packages/shared/src/*"]
