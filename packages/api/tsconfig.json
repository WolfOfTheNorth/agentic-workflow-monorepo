{
  "extends": "../../configs/typescript/library.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react-jsx",
    "baseUrl": "../../",
    "paths": {
      "@agentic-workflow/shared": ["../shared/src/index"],
      "@agentic-workflow/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts", "src/**/__tests__/**/*", "src/**/*.spec.ts"],
  "references": [{ "path": "../shared" }]
}
